--- 
- hosts: all
  user: root
  become: yes
  tasks:
   - name: create a directory
     ansible.builtin.file:
        name: project
        path: /root
        state: directory
   - name: git clone
     ansible.builtin.git:
        repo: https://github.com/jai3242/pet_shop.git
        dest: /root/petshop
        version: main
